{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "MagicOnion": {
    "OpenTelemetry": {
      "MagicOnionActivityName": "Chatapp.Server",
      "MetricsExporterEndpoint": "http://127.0.0.1:9184/metrics/",
      "MetricsExporterHostingEndpoint": "http://127.0.0.1:9184/metrics/"
    }
  },
  "UseExporter": "jaeger", // select "console", "zipkin", "jaeger"
  "Jaeger": {
    "AgentHost": "localhost",
    "AgentPort": 6831
  },
  "Zipkin": {
    "Endpoint": "http://localhost:9411/api/v2/spans"
  },
  "AspNetCoreInstrumentation": {
    "RecordException": "true"
  }
}
