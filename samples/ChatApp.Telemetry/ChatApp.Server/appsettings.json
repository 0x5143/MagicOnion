{
  "MagicOnion": {
    "ServerPorts": [
      {
        "Host": "0.0.0.0",
        "Port": 12345,
        "UseInsecureConnection": true
      }
    ],
    "OpenTelemetry": {
      "MagicOnionActivityName": "ChatApp.Server",
      "MetricsExporterEndpoint": "http://127.0.0.1:9184/metrics/",
      "MetricsExporterHostingEndpoint": "http://127.0.0.1:9184/metrics/"
    }
  },
  "UseExporter": "zipkin", // select "console", "zipkin", "jaeger"
  "Jaeger": {
    "Host": "localhost",
    "Port": 6831
  },
  "Zipkin": {
    "Endpoint": "http://localhost:9411/api/v2/spans"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}
